<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/zen_hub_title" >

        <!-- Status Bar -->
        <com.zen.hub.preferences.CardViewPreference
            android:key="statusbar_category"
            android:title="@string/statusbar_title"
            android:summary="@string/statusbar_summary"
            android:fragment="com.zen.hub.fragments.StatusBarSettings"
            android:icon="@drawable/ic_settings_statusbar"/>

        <com.zen.hub.preferences.CardViewPreference1
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
            android:summary="@string/quicksettings_summary"
            android:fragment="com.zen.hub.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <com.zen.hub.preferences.CardViewPreference2
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:summary="@string/notifications_summary"
            android:fragment="com.zen.hub.fragments.NotificationSettings"
            android:icon="@drawable/ic_settings_notifications"/>

        <com.zen.hub.preferences.CardViewPreference3
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title"
            android:summary="@string/lockscreen_summary"
            android:fragment="com.zen.hub.fragments.LockScreenSettings"
            android:icon="@drawable/ic_settings_lockscreens"/>

        <com.zen.hub.preferences.CardViewPreference4
            android:key="userinterface_category"
            android:title="@string/userinterface_title"
            android:summary="@string/userinterface_summary"
            android:fragment="com.zen.hub.fragments.UserInterfaceSettings"
            android:icon="@drawable/ic_settings_userinterface"/>

        <com.zen.hub.preferences.CardViewPreference5
            android:key="theming_category"
            android:title="@string/theming_title"
            android:summary="@string/theming_summary"
            android:fragment="com.zen.hub.fragments.ThemingSettings"
            android:icon="@drawable/ic_settings_theming"/>

        <com.zen.hub.preferences.CardViewPreference6
            android:key="navigation_category"
            android:title="@string/navigation_title"
            android:summary="@string/navigation_summary"
            android:fragment="com.zen.hub.fragments.Navigation"
            android:icon="@drawable/ic_settings_navigation"/>

        <com.zen.hub.preferences.CardViewPreference7
            android:key="misc_category"
            android:title="@string/misc_title"
            android:summary="@string/misc_summary"
            android:fragment="com.zen.hub.fragments.MiscSettings"
            android:icon="@drawable/ic_settings_miscs"/>

</PreferenceScreen>
