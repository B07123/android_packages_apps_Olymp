<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/qs_footer_items"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <com.zeus.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_edit"
            android:title="@string/qs_edit_title"
            android:summary="@string/qs_edit_summary"
            android:defaultValue="true" />

        <com.zeus.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_settings"
            android:title="@string/qs_settings_title"
            android:summary="@string/qs_settings_summary"
            android:defaultValue="true" />

          <com.zeus.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_services"
            android:title="@string/qs_running_service_title"
            android:summary="@string/qs_running_service_summary"
            android:defaultValue="false" />

          <com.zeus.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_user"
            android:title="@string/qs_user_title"
            android:summary="@string/qs_user_summary"
            android:defaultValue="true" />

      <com.zeus.support.preferences.SystemSettingSwitchPreference
        android:key="qs_footer_security_information"
        android:title="@string/qs_footer_security_information_title"
        android:summary="@string/qs_footer_security_information_summary"
        android:defaultValue="true" />

    <com.zeus.support.preferences.SystemSettingListPreference
        android:key="qs_footer_info"
        android:title="@string/qs_footer_info_left"
        android:entries="@array/qs_footer_info_entrires"
        android:entryValues="@array/qs_footer_info_values"
        android:defaultValue="3" />

    <com.zeus.support.preferences.SystemSettingListPreference
        android:key="qs_footer_info_right"
        android:title="@string/qs_footer_info_right"
        android:entries="@array/qs_footer_info_entrires"
        android:entryValues="@array/qs_footer_info_values"
        android:defaultValue="2" />

         <!-- QS footer text string -->
    <com.zeus.support.preferences.SystemSettingEditTextPreference
        android:key="x_footer_text_string"
        android:title="@string/qs_footer_text_string_title"
        android:summary="@string/qs_footer_text_string_summary"
        android:defaultValue="Zeus-OS" />

</PreferenceScreen>
